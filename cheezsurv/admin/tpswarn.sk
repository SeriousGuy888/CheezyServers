command /tpswarn:
    permission: *
    trigger:
        set {_tps} to tps from last minute
        if {_tps} is less than 17:
            broadcast "§cThe server TPS is down to §e%{_tps}%§c! (Which is why you may be lagging) Maybe it's time for a server restart."

every 3 minutes in world "world":
    make console execute command "/tpswarn"