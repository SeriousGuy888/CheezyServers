command /suicide:
  trigger:
    set {%player%.suiciding} to true
    kill player

on death:
  {%player%.suiciding} is true
  set death message to "%player% commited die"
  set {%player%.suiciding} to false

on damage:
  victim is player
  attacker is not set
  damage > 3
  send action bar "§6[AD] §eWanna streamline your suicide? /suicide" to victim