  hastePotentDuration: 2400 # 120 seconds
  hasteSplash: Splash Potion of Haste
  hasteSplashDuration: 2400 # 120 seconds
  hastePotentSplash: Potent Splash Potion of Haste
  hastePotentSplashDuration: 1800 # 90 seconds

